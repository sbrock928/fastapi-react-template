version: '3.8'

services:
  redis:
    image: redis:latest
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    restart: unless-stopped

  celery-beat:
    build:
      context: ..
      dockerfile: task_queue/Dockerfile
    command: python task_queue/workers/start_beat.py --loglevel=INFO
    volumes:
      - ../:/app
    depends_on:
      - redis
    restart: unless-stopped

  celery-worker-reports:
    build:
      context: ..
      dockerfile: task_queue/Dockerfile
    command: python task_queue/workers/start_worker.py --queue=reports --loglevel=INFO --concurrency=2
    volumes:
      - ../:/app
    depends_on:
      - redis
    restart: unless-stopped

  celery-worker-notifications:
    build:
      context: ..
      dockerfile: task_queue/Dockerfile
    command: python task_queue/workers/start_worker.py --queue=notifications --loglevel=INFO --concurrency=2
    volumes:
      - ../:/app
    depends_on:
      - redis
    restart: unless-stopped

  celery-worker-default:
    build:
      context: ..
      dockerfile: task_queue/Dockerfile
    command: python task_queue/workers/start_worker.py --queue=default --loglevel=INFO --concurrency=2
    volumes:
      - ../:/app
    depends_on:
      - redis
    restart: unless-stopped

  flower:
    build:
      context: ..
      dockerfile: task_queue/Dockerfile
    command: python task_queue/workers/start_flower.py --port=5555
    ports:
      - "5555:5555"
    volumes:
      - ../:/app
    depends_on:
      - redis
      - celery-worker-default
      - celery-worker-reports
      - celery-worker-notifications
    restart: unless-stopped

volumes:
  redis_data:
